<h1><%= I18n.t('home.index.title')%></h1>
<p> <%= I18n.t('home.index.subtitle')%></p>
<p><%= I18n.t('hello')%></p>
<p>Users:</p>
<%= form_with url: home_result_path, method: :get do |f| %>
<%= f.select :user_id, User.pluck(:email, :id), {include_blank: true}, {data: { controller: 'slim', slim_target: 'field' } } %>
<%= f.submit "Submit", disable_with: 'Submiting...' %>
<% end %>

<p>Products:</p>
<%= form_with url: home_result_path, method: :get do |f| %>
<%= f.select :product_id,  Product.pluck(Arel.sql("translation->>'#{I18n.locale}'"),:id), {include_blank: true}, {data: { controller: 'slim', slim_target: 'field' } } %>
<%= f.submit "Submit", disable_with: 'Submiting...' %>
<% end %>